<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.dog_list.ListActivity"
    android:background="#ffffff">

    <ImageButton
        android:id="@+id/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="27dp"
        android:background="#00000000"/>

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="27dp"
        android:background="#00000000"/>

    <LinearLayout
        android:id="@+id/searchview"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        />



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/list_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        android:layout_marginTop="10dp"
        app:tabIndicatorColor="#ff8878"
        app:tabSelectedTextColor="#ff8878"
        app:tabMode="fixed"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_search">
    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/list_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/list_tablayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <ImageView
        android:id="@+id/Img_nolist"
        android:layout_width="135dp"
        android:layout_height="105dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
        android:src="@drawable/nolist_logo"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/Tv_nolist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="310dp"
        android:textSize="15dp"
        android:text="조건에 맞는 공고가 없다멍!"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/btn_newpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nolist_button_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="170dp"
        android:layout_marginLeft="30dp"
        android:background="#00000000"
        android:visibility="invisible"
        android:enabled="false"/>


    <ImageButton
        android:id="@+id/btn_rephoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nolist_button_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="30dp"
        android:background="#00000000"
        android:visibility="invisible"
        android:enabled="false"/>

    <ImageButton
        android:id="@+id/btn_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_writebutton"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"/>


    <Button
        android:id="@+id/imsibutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="임시버튼"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>