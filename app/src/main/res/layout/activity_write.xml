<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFBFBF"
    tools:context=".main.dog_shelter.Write_Shelter_Activity">

    <!-- 사진올리기 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/write_picture"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="@drawable/imfo_bg2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_write1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="@id/write_picture"
            app:layout_constraintTop_toTopOf="@id/write_picture" />

        <ImageButton
            android:id="@+id/picture_write1_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/imageplus"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="@id/picture_write1"
            app:layout_constraintBottom_toBottomOf="@id/picture_write1"
             />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_write2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/image"
            app:layout_constraintEnd_toStartOf="@id/picture_write3"
            app:layout_constraintStart_toEndOf="@id/picture_write1"
            app:layout_constraintTop_toTopOf="@id/write_picture" />

        <ImageButton
            android:id="@+id/picture_write2_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/imageplus"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="@id/picture_write2"
            app:layout_constraintBottom_toBottomOf="@id/picture_write2"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_write3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/image"
            app:layout_constraintEnd_toEndOf="@id/write_picture"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintStart_toStartOf="@id/write_picture"
            app:layout_constraintTop_toTopOf="@id/write_picture" />

        <ImageButton
            android:id="@+id/picture_write3_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/imageplus"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="@id/picture_write3"
            app:layout_constraintBottom_toBottomOf="@id/picture_write3"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="※얼굴이 잘 보이는 사진으로 등록해주세요.※"
            android:textSize="14sp"
            android:textColor="#999797"
            app:layout_constraintBottom_toBottomOf="@id/write_picture"
            app:layout_constraintEnd_toEndOf="@id/write_picture"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintStart_toStartOf="@id/write_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.193" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/ic_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="27dp"
        android:background="#00000000"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 분양 공고 정보란 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imformation_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/imfo_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_picture"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/species_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="푸들"
            android:textColor="#5ea096"
            android:textSize="40sp"
            android:textStyle="bold"
            android:backgroundTint="#5ea096"
            android:shadowColor="#5ea096"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="@id/imformation_view"
            app:layout_constraintStart_toStartOf="@id/imformation_view"
            app:layout_constraintTop_toTopOf="@id/imformation_view"
            />

        <Button
            android:id="@+id/species_modify"
            android:layout_width="51dp"
            android:layout_height="26dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/species_edit_btn"
            android:text="종 수정"
            android:textColor="#5ea096"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/imformation_view"
            app:layout_constraintTop_toTopOf="@id/imformation_view" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imformation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="135dp"
            app:layout_constraintEnd_toEndOf="@id/imformation_view"
            app:layout_constraintStart_toStartOf="@id/imformation_view"
            app:layout_constraintTop_toTopOf="@id/imformation_view">

            <!-- 성별 라디오 버튼 -->
            <RadioGroup
                android:id="@+id/radioGroupgender"
                android:layout_width="201dp"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/imformation"
                app:layout_constraintTop_toTopOf="@id/imformation">

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rbtn_selector_left"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="여"
                    android:textSize="20sp"
                    android:textColor="@drawable/rbtn_textcolor_selector" />

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rbtn_selector_right"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="남"
                    android:textSize="20sp"
                    android:textColor="@drawable/rbtn_textcolor_selector" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/gender"
                android:gravity="center"
                android:text="성별"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/imformation"
                app:layout_constraintTop_toTopOf="@id/imformation" />

            <!-- 중성화 여부 라디오 버튼 -->
            <RadioGroup
                android:id="@+id/radioGroupNeutrali"
                android:layout_width="201dp"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="44dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/imformation"
                app:layout_constraintTop_toTopOf="@id/imformation">

                <RadioButton
                    android:id="@+id/radioYes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rbtn_selector_left"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Y"
                    android:textSize="20sp"
                    android:textColor="@drawable/rbtn_textcolor_selector" />

                <RadioButton
                    android:id="@+id/radioNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rbtn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="N"
                    android:textSize="20sp"
                    android:textColor="@drawable/rbtn_textcolor_selector" />

                <RadioButton
                    android:id="@+id/radioNon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rbtn_selector_right"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="모름"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:textSize="20sp" />
            </RadioGroup>

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/gender"
                android:gravity="center"
                android:text="중성화"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/imformation"
                app:layout_constraintTop_toTopOf="@id/imformation" />

            <!-- 체충 -->
            <EditText
                android:id="@+id/edtweight"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_marginTop="92dp"
                android:background="#00000000"
                android:gravity="right"
                android:hint="5"
                android:textColor="#84cdc2"
                android:textSize="20sp"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="@id/imformation"
                app:layout_constraintTop_toTopOf="@id/imformation" />

            <View
                android:id="@+id/view1"
                android:layout_width="184dp"
                android:layout_height="2dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/write_line"
                app:layout_constraintEnd_toStartOf="@+id/view3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/imformation"
                app:layout_constraintTop_toBottomOf="@id/edtweight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="20sp"
                android:textColor="#84cdc2"
                android:textStyle="bold"
                android:paddingBottom="2dp"
                app:layout_constraintStart_toEndOf="@id/edtweight"
                app:layout_constraintBottom_toBottomOf="@id/view1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gender"
                android:gravity="center"
                android:text="체중"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/edtweight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="@id/view1" />

            <!-- 나이 -->
            <EditText
                android:id="@+id/edtyear"
                android:layout_width="63dp"
                android:layout_height="28dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="73dp"
                android:background="#00000000"
                android:gravity="right"
                android:hint="2"
                android:textColor="#84cdc2"
                android:textSize="20sp"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@id/imformation"
                app:layout_constraintTop_toTopOf="@id/imformation" />

            <View
                android:id="@+id/view3"
                android:layout_width="136dp"
                android:layout_height="2dp"
                android:background="@drawable/write_line"
                app:layout_constraintEnd_toEndOf="@id/imformation"
                app:layout_constraintTop_toBottomOf="@id/edtyear" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="살"
                android:textSize="20sp"
                android:textColor="#84cdc2"
                android:textStyle="bold"
                android:paddingBottom="2dp"
                app:layout_constraintStart_toEndOf="@id/edtyear"
                app:layout_constraintBottom_toBottomOf="@id/view3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gender"
                android:gravity="center"
                android:text="나이"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/edtyear"
                app:layout_constraintEnd_toEndOf="@id/view3" />

            <!-- 보호장소 -->
            <EditText
                android:id="@+id/edtplace"
                android:layout_width="250dp"
                android:layout_height="28dp"
                android:layout_marginTop="140dp"
                android:background="#00000000"
                android:gravity="center"
                android:hint="서울시 영등포구"
                android:textColor="#84cdc2"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/imformation"
                app:layout_constraintTop_toTopOf="@id/imformation" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/write_line"
                app:layout_constraintStart_toStartOf="@id/imformation"
                app:layout_constraintTop_toBottomOf="@id/edtplace" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gender"
                android:gravity="center"
                android:text="보호장소"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/edtplace"
                app:layout_constraintEnd_toEndOf="@id/imformation" />

            <!-- 특징 -->
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:layout_marginTop="213dp"
                android:background="@drawable/write_edit"
                app:layout_constraintEnd_toEndOf="@id/imformation"
                app:layout_constraintStart_toStartOf="@id/imformation"
                app:layout_constraintTop_toTopOf="@+id/imformation" />


            <EditText
                android:id="@+id/edtfeature"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:layout_marginTop="213dp"
                android:background="#00000000"
                android:gravity="top"
                android:hint="활발함"
                android:padding="10dp"
                android:textColor="#84cdc2"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/imformation"
                app:layout_constraintStart_toStartOf="@id/imformation"
                app:layout_constraintTop_toTopOf="@+id/imformation" />


            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gender"
                android:gravity="center"
                android:text="특징"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/edtfeature"
                app:layout_constraintEnd_toEndOf="@id/imformation" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 연락처 라디오 버튼 -->
        <RadioGroup
            android:id="@+id/radioContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="@id/imformation_view"
            app:layout_constraintStart_toStartOf="@id/imformation_view"
            app:layout_constraintTop_toBottomOf="@id/imformation">

            <RadioButton
                android:id="@+id/radioretouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_left"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="이전 연락처 그대로"
                android:textSize="20sp"
                android:textColor="@drawable/rbtn_textcolor_selector" />

            <RadioButton
                android:id="@+id/radionotouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_right"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="연락처 수정"
                android:textSize="20sp"
                android:textColor="@drawable/rbtn_textcolor_selector" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--공고 등록버튼 -->
    <Button
        android:id="@+id/btn_okwrite"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fb777a"
        android:text="등록하기"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>